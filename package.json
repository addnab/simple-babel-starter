{
  "name": "simple-babel-starter",
  "version": "0.1.0",
  "description": "Simple babel boilerplate with crucial and up-to-date dependencies",
  "scripts": {
    "build": "babel src -d dist",
    "test": "standard && mocha --recursive --compilers js:babel-register",
    "lint": "standard",
    "dev": "nodemon --exec npm run lint"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "sinon": "^1.17.4",
    "standard": "^7.0.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
